NAME	= a.out

CC		= gcc
CFLAG	= -g -Wall -Wextra -Werror

SRC		= $(wildcard *.c)

# **************************************************************************** #

all:
	$(CC) $(CFLAG) $(SRC) -o $(NAME) 

